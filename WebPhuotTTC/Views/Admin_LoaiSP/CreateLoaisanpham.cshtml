@model List<WebPhuotTTC.Models.NHOMSANPHAM>
<link href="~/Content/AdminPage/LoaiSP/CreateLoaiSP.css" rel="stylesheet" />
<div class="admin-loaisanpham-dialog_create">
    <div>
        <i id="close-btn" class="fa-solid fa-rectangle-xmark" style="color: black;" onclick="CloseDialog()"></i>
        <h2>Tạo Loại sản phẩm mới</h2>
        @using (Html.BeginForm("CreateLoaisanpham", "Admin_LoaiSP", FormMethod.Post))
        {
            <fieldset>
                <br />
                <label for="name">Tên Loại</label>
                <input id="name" type="text" required name="TenLoai" value="" placeholder="Nhập tên loại" />
                <label for="name">Nhóm sản phẩm</label>
                <select name="MaNhom">
                    @foreach(var item in Model)
                    {
                        <option value="@item.MaNhom">@item.TenNhom</option>
                    }
                </select>
                <br />
                <br />
                <input id="submit" type="submit" value="Thêm" />
            </fieldset>
        }
    </div>
</div>

