@model List<WebPhuotTTC.Models.LOAISANPHAM>
    <link href="~/Content/AdminPage/LoaiSP/LoaiSP.css" rel="stylesheet"/>
@{
    ViewBag.Title = "LoaiSanPham";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<h2>Loại sản phẩm </h2>
<div class="admin-loaisanpham-container">
    <div>
        <button id="btn-create">
            @Ajax.ActionLink("Tạo loại sản phẩm", "CreateLoaisanpham", "Admin_LoaiSP", new AjaxOptions
       {
           HttpMethod = "GET",
           InsertionMode = InsertionMode.Replace,
           UpdateTargetId = "dialog"
       })
        </button>
        <p>Số Lượng: @Model.Count</p>
    </div>
    <div class="admin-loaisanpham-table">
        <table>
            <tr>
                <th width="5%">STT</th>
                <th width="35%">Tên Loại</th>
                <th width="40%">Tên Nhóm</th>
                <th width="20%">Chức Năng</th>
            </tr>
            @{int count = 0;}
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.TenLoai</td>
                    <td>@item.NHOMSANPHAM.TenNhom</td>
                    <td style="text-align:center;">
                        @Ajax.ActionLink("Sửa", "EditLoaisanpham", "Admin_LoaiSP", new { id = @item.MaLoai,maNhom=item.MaNhom }, new AjaxOptions
                 {
                     HttpMethod = "GET",
                     InsertionMode = InsertionMode.Replace,
                     UpdateTargetId = "dialog"
                 })
                        |
                        @Ajax.ActionLink("Xóa", "DeleteLoaisanpham", "Admin_LoaiSP", new { id = @item.MaLoai }, new AjaxOptions
                 {
                     HttpMethod = "GET",
                     InsertionMode = InsertionMode.Replace,
                     UpdateTargetId = "dialog"
                 })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div id="dialog">
        <!-- DISPLAY DIALOG-->
    </div>
</div>