@{
    ViewBag.Title = "QuenMatKhau";
    Layout = "~/Views/Shared/_UserPage.cshtml";
}
<link rel="stylesheet" href="~/Content/UserPage/Account/quenmatkhau.css" />
<div class="quenmatkhau-container">
    <div class="logo">
        <img class="logo_img" src="https://res.cloudinary.com/duouljna1/image/upload/v1727272425/Gold_Red_Retro_Vintage_Motorcycle_Club_Badge_Logo_uc4wti.png" alt="TTC Mobile" />
    </div>
    <div class="title">Quên mật khẩu?</div>
    <div class="description">Điền email gắn với tài khoản của bạn để nhận đường dẫn thay đổi mật khẩu</div>
    @using (Html.BeginForm("UpdateMK", "Account", FormMethod.Post))
    {
        <div id="step1" class="step">
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <button class="btn" type="button" onclick="GuiMaXacNhan(event)">Tiếp tục</button>
        </div>

        <div id="step2" class="step hidden">
            <div class="description">Nhập mã xác nhận đã được gửi đến email của bạn</div>
            <div class="input-group">
                <label for="code">Mã xác nhận</label>
                <input type="text" id="code" name="code">
            </div>
            <button class="btn" type="button" onclick="showStep(3)">Xác nhận</button>
        </div>

        <div id="step3" class="step hidden">
            <div class="description">Nhập mật khẩu mới của bạn</div>
            <div class="input-group">
                <label for="new-password">Mật khẩu mới</label>
                <input type="password" id="new-password" name="new-password">
            </div>
            <div class="input-group">
                <label for="confirm-password">Xác nhận mật khẩu</label>
                <input type="password" id="confirm-password" name="confirm-password">
            </div>
            <button class="btn" type="submit">Đặt lại mật khẩu</button>
        </div>
    }
    <a href="#" class="link" onclick="history.back()">Quay lại đăng nhập</a>
</div>
<script src="~/Scripts/UserPage/Account/quenmatkhau.js"></script>