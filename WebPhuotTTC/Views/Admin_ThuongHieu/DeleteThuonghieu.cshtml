@model WebPhuotTTC.Models.THUONGHIEU
<link href="../Content/AdminPage/ThuongHieu/DeleteThuonghieu.css" rel="stylesheet" />
<div class="admin-thuonghieu-dialog_delete">
    <div>
        <i class="fa-solid fa-rectangle-xmark" style="color: black;" onclick="CloseDialog(event)"></i>
        <h2>Xóa thương hiệu</h2>
        <hr />
        @{
            if (Model != null)
            {
                <p class="title">Bạn có chắc chắn muốn xóa</p>
                <p><span>Tên thương hiệu:</span> @Model.TenThuongHieu</p>
                using (Html.BeginForm("DeleteThuonghieu", "Admin_ThuongHieu", "POST"))
                {
                    <input id="submit" type="submit" value="Delete" />
                }
            }else
            {
                <h4>Không thể xóa do có sản phẩm liên kết đến</h4>
            }
        }
    </div>
</div>